<body>
  <div class="row">
    <div class="medium-3 columns">
      <ul class="side-nav">
        <% Tag.all.each do |tag| %>
          <li><%= tag.title %></li>
        <% end %>
      </ul>
    </div>

    <% if notice %>
      <div data-alert class="alert-box">
        <%= notice %>
      </div>
    <% end %>

  <div class="medium-9 columns">
    <div class="header">
      <h1>POSTS!</h1>
    </div>
    <br>
    <div class="button small right">
      <%= link_to 'New Post', new_post_path %>
      <%= link_to "Most Likes", posts_path(:most_likes => true) %>
      <%= link_to "Recent Posts", posts_path(:most_recent => true) %>
    </div>
    <hr>
    <br>
    <% @posts.each do |post| %>
      <ul>

        <div class="likeh">
          <h6><%= post.likes.size %> &nbsp;&nbsp; - &nbsp;&nbsp; </h6>
        </div>
        <div class="head">
          <h4><%= post.title %></h4>
        </div>

        <div class="edit">
          <div class="text-right">
            <div class="button small success">
              <%= link_to 'Edit Post', edit_post_path(post) %>
            </div>
          </div>
        </div>

        <% if post.url != '' && post.code != '' %>
          <li><a href=<%= post.url %> ><%= post.url %></a></li>
          <li><%= post.code %></li>
        <% elsif post.url != '' %>
          <li><a href=<%= post.url %> ><%= post.url %></a></li>
        <% else %>
          <li><%= post.code %></li>
        <% end %>
        <li><%= post.description %></li>
      </ul>

          <div class="tags">
            <% post.tags.each do |tag| %>
              <%= tag.title %>
            <% end %>
            <div class="time">
              <%= post.timestamp_field.strftime("%d/%m/%y") %>
            </div>
          </div>

        <div class="likes">
          <% if user_liked(post) %>
            <div class="button small info">
              <%= link_to 'Like Post', post_like_path(post) %>
            </div>
          <% else %>
            Liked
          <% end %>
        </div>
      <hr>
    <% end %>
  </div>
</div>
