<div class="row">
  <div class="medium-8 medium-offset-2 columns">
    <div class="panel">

      <div class="text-center">
        <h1>Sign up!</h1>
      </div>

      <% if @user.errors.any? %>
        <div data-alert class="alert-box">
          There were errors on the page:
            <% @user.errors.full_messages.each do |msg| %>
              <li class="errors"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <hr>

      <%= render 'form' %>

    </div>
  </div>
</div>
